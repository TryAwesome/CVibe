# CVibe Environment Variables Example
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration (for production use PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://localhost:5432/cvibe
DATABASE_USERNAME=cvibe
DATABASE_PASSWORD=your_password

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-at-least-256-bits

# =============================================================================
# Google OAuth2 (optional)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# MinIO / S3 Storage (optional)
# =============================================================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# =============================================================================
# AI Model Configuration
# These are default values. Users can override in Settings page.
# Priority: User Settings > Environment Variables
# =============================================================================

# Language Model (LLM) Configuration
# Supported providers: openai, anthropic, google, custom
AI_LLM_PROVIDER=openai
AI_LLM_API_KEY=sk-your-api-key
AI_LLM_MODEL=gpt-4o
AI_LLM_BASE_URL=                    # Leave empty for default, or set for proxy/local model

# Vision Model Configuration (for image analysis like resume parsing)
# If not set, will use LLM configuration as fallback
AI_VISION_PROVIDER=openai
AI_VISION_API_KEY=sk-your-api-key   # Can be same as LLM or different
AI_VISION_MODEL=gpt-4o              # Must support vision (gpt-4o, claude-3-*, gemini-pro-vision)
AI_VISION_BASE_URL=                 # Leave empty for default

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# Spring Profile
# =============================================================================
SPRING_PROFILES_ACTIVE=dev
